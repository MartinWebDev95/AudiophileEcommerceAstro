---
const { features, includedItems } = Astro.props;
---

<section class="sectionFeaturesContainer">
  <div>
    <h3>
      Features
    </h3>
    <p class="features">
      {features}
    </p>
  </div>

  <div>
    <h3>
      In the box
    </h3>

    <ul class="listItems">
      {includedItems.map(({ quantity, item }) => (
        <li>
          <span class="itemNumber">{`${quantity}x`}</span>
          <span class="itemName">{item}</span>
        </li>
      ))}
    </ul>
  </div>
</section>

<style>
  .sectionFeaturesContainer{
    width: 90%;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    padding-block: 4rem;
  }

  .sectionFeaturesContainer div h3{
    text-transform: uppercase;
    font-size: 1.5em;
    margin: 0;
    padding-bottom: 1rem;
  }

  .features, .itemName{
    color: var(--gray);
  }

  .listItems li{
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .itemNumber{
    color: var(--orange);
    font-weight: bold;
  }

  @media (min-width: 480px){
    .sectionFeaturesContainer{
      flex-direction: row;
      gap: 4rem;
    }

    .sectionFeaturesContainer div:first-of-type, .sectionFeaturesContainer div:last-of-type{
      width: 50%;
    }
  }

  @media (min-width: 1000px){
    .sectionFeaturesContainer{
      width: 80%;
      flex-direction: row;
      gap: 6rem;
    }

    .sectionFeaturesContainer div:first-of-type{
      width: 60%;
    }
    
    .sectionFeaturesContainer div:last-of-type{
      width: 40%;
    }

    .sectionFeaturesContainer div h3{
      font-size: 2em;
    }
  }
</style>